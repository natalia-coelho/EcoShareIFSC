@page
@model EcoShare.Areas.Identity.Pages.Admin.ListarUsuariosModel

<div>
    <h1>Lista de Usuários</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Tipo de Usuário</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.TodosUsuarios)
            {
                <tr>
                    <td>@user.Nome</td>
                    <td>@user.Email</td>
                    <td>@user.TipoUsuario</td>
                </tr>
            }
        </tbody>
    </table>
</div>
