@page
@model AdicionarProdutoModel

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Novo Produto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produto.Id" />
            <div class="form-group">
                <label asp-for="Produto.Nome" class="control-label"></label>
                <input asp-for="Produto.Nome" class="form-control" />
                <span asp-validation-for="Produto.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <input asp-for="Produto.Descricao" class="form-control" />
                <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Preco" class="control-label"></label>
                <input asp-for="Produto.Preco" class="form-control" />
                <span asp-validation-for="Produto.Preco" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Produto.Estoque" class="control-label"></label>
                <input asp-for="Produto.Estoque" class="form-control" />
                <span asp-validation-for="Produto.Estoque" class="text-danger"></span>
            </div>            
            @* <div class="form-group">
                <label asp-for="Produto.Categoria" class="control-label"></label>
                <input asp-for="Produto.Categoria" class="form-control" />
                <span asp-validation-for="Produto.Categoria" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Produto.Fornecedor" class="control-label"></label>
                <input asp-for="Produto.Fornecedor" class="form-control" />
                <span asp-validation-for="Produto.Fornecedor" class="text-danger"></span>
            </div>
            @if (@Model.Produto.UrlImagem != null)
            {
                <div class="image-container">
                    <img src="@Model.Produto.UrlImagem" alt="Imagem do Produto" />
                </div>
            }

            <div class="form-group">
                <label asp-for="Produto.UrlImagem"></label>
                <input asp-for="Produto.UrlImagem" class="form-control" />
            </div>
            <!-- <div class="form-group">
                <label for="fileInput">Escolher arquivo:</label>
                <input type="file" name="fileInput" class="form-control" />
            </div> -->
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}