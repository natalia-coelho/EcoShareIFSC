@page
@model ExcluirProdutoModel
@{
    ViewData["Title"] = "Excluir Produto";
}

<h2>@ViewData["Title"]</h2>

<p class="text-danger">@Model.MensagemErro</p>

<h3>Deseja excluir este produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Descricao)
        </dd>
        <div class="image-container">
                <img src="@Model.Produto.UrlImagem" alt="Imagem do Produto" />
        </div>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Produto.Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-area="Produto" asp-page="ListaProdutos">Cancelar</a>
    </form>
</div>