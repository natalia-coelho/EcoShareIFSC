    {
            <form>
                <div class="input-group mb-3">
                    <input type="search" class="form-control rounded" placeholder="Procurar Fornecedores" aria-label="Search"
                        aria-describedby="search-addon" asp-for="SearchString" />
                    <button type="submit" class="btn btn-primary" data-mdb-ripple-init>Pesquisar</button>
                </div>
